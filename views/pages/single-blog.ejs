<!-- BLOG PART START -->
<div class="blog_part">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="allpost_content">
                            <div class="serach_btn">
                                <form action="#">
                                    <div class="search_ber">
                                        <input type="text" class="form-control search_button" id="serach_button" name="serach_button" value="" placeholder="Search Here" />
                                        <i class="icofont-search-1"></i>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="recent_post">
                            <div class="sidebar">
                                <h4>Recent Post</h4>
                            </div>
                            <ul>
                                <% if (recentBlogs) { %>
                                    <% _.each(recentBlogs, function(recentBlog) { %>
                                        <li>
                                            <span>
                                                <%- moment(recentBlog.createdAt).format('DD MMMM YYYY') %> 
                                            </span>
                                            <h4><a href="/blog/<%- recentBlog._id %>"><%- recentBlog.title %></a></h4>
                                        </li>
                                    <% }) %>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8 col-xl-8">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="blog">
                            <div class="blog_img">
                                <img src="<%- blog.image.url %>" class="w-100 img-fluid" alt="jpgimg" />
                            </div>
                            <div class="blog_publish d-flex justify-content-between pt-4">
                                <div class="date">
                                    <span><i class="icofont-ui-calendar"></i>
                                        <%- moment(blog.createdAt).format('DD MMMM YYYY') %>
                                    </span>
                                </div>
                                <div class="fav_icon">
                                    <span><i class="icofont-eye-alt"></i>
                                        <% if (blog.views === 0) { %>
                                            No views
                                        <% } else if (blog.views === 1) { %>
                                            1 view
                                        <% } else { %>
                                            <%- blog.views %> views
                                        <% } %>
                                    </span>
                                    <span><i class="icofont-speech-comments"></i>
                                        <% if (blog.comments && blog.comments == 0) { %>
                                            No comments
                                        <% } else if (blog.comments && blog.comments == 1) { %>
                                            1 comment
                                        <% } else if (blog.comments && blog.comments > 1) { %>
                                            <%- blog.comments %> comments
                                        <% } %>                                    
                                    </span>
                                    <span><i class="icofont-user"></i>Posted by Admin</span>
                                </div>
                            </div>
                            <div class="blog_title">
                                <h4><a href="#">
                                    <%- blog.title %>
                                </a></h4>
                            </div>
                            <div class="blog_details">
                                <p>
                                    <%- blog.content %>
                                </p>
                                
                                <div class="social_iconber">
                                    <div class="row align-items-center">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 text-left">
                                            <div class="tags">
                                                <span>Tags:</span>
                                                <span><%- blog.tags %></span>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 text-right">
                                            <div class="social_icon">
                                                <ul class="social_media">
                                                    <li>
                                                        <a href="/share-skype/<%- blog._id %>"><i class="icofont-skype"></i></a>
                                                    </li>
                                                    <li>
                                                        <a href="/share-facebook/<%- blog._id %>"><i class="icofont-facebook"></i></a>
                                                    </li>
                                                    <li>
                                                        <a href="/share-twitter/<%- blog._id %>"><i class="icofont-twitter"></i></a>
                                                    </li>
                                                    <li>
                                                        <a href="/share-whatsapp/<%- blog._id %>"><i class="icofont-whatsapp"></i></a>
                                                    </li>
                                                    <li>
                                                        <a href="/share-linkedin/<%- blog._id %>"><i class="icofont-linkedin"></i></a>
                                                    </li>
                                                    <!-- copy link -->
                                                    <li>
                                                        <i class="icofont-link" onclick="copyLink()"></i>
                                                    </li>

                                                    <script type="text/javascript">
                                                        function copyLink() {
                                                            // get the current url
                                                            var url = window.location.href;
                                                            // create a temporary input element
                                                            var input = document.createElement('input');
                                                            // set the value of the input element to the current url
                                                            input.setAttribute('value', url);
                                                            // append the input element to the body
                                                            document.body.appendChild(input);
                                                            // select the input element
                                                            input.select();
                                                            // copy the input element's value
                                                            document.execCommand('copy');
                                                            // remove the input element
                                                            document.body.removeChild(input);
                                                            // alert the user that the url has been copied
                                                            alert('Link copied to clipboard');
                                                        }
                                                    </script>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- button for next and previous post -->
                                <div class="row mt-5">
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                        <div class="next_post">
                                            <a href="/previous-post/<%- blog._id %>" class="btn btn-sm border-transparent">
                                                <i class="icofont-double-left"></i>Previous Post
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                        <div class="next_post text-right">
                                            <a href="/next-post/<%- blog._id %>" class="btn btn-sm border-transparent">
                                                Next Post<i class="icofont-double-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <div class="details_comment mt-4">
                                    <strong>Comments</strong>
                                    <% if (comments.length > 0) { %>
                                        <div style="height: 60vh; overflow-y: scroll;">
                                            <% _.each(comments, function(item) { %> 
                                                <div class="customer d-flex mt-3">
                                                    <div class="customer_info">
                                                        <strong><%- item.commentBy.name %>  <br /></strong>
                                                        <span><%- moment(item.commentDate).format('DD MMM YYYY hh:mm A') %></span>
                                                        <p>
                                                            <%- item.comment %> 
                                                        </p>
                                                        <% if (item.commentReplies && item.commentReplies.length > 0) { %>
                                                            <% _.each(item.commentReplies, function(reply) { %> 
                                                                <div class="customer_info replies ml-5">
                                                                    <strong><%- reply.replyBy.name %>  <br /></strong>
                                                                    <span><%- moment(reply.replyDate).format('DD MMM YYYY hh:mm A') %> </span>
                                                                    <p>
                                                                        <%- reply.reply %> 
                                                                    </p>
                                                                </div>
                                                            <% }) %> 
                                                        <% } else { %>
                                                            <div class="ml-5">No Replies to this comment yet</div>
                                                        <% } %> 
                                                    </div>
                                                    <div class="reply ml-auto">
                                                        <a href="#" data-toggle="modal" data-target="#reply_<%- item._id %>">
                                                            <i class="icofont-reply"></i>Reply
                                                        </a>
                                                    </div>

                                                    <div class="modal fade" id="reply_<%- item._id %>" tabindex="-1" role="dialog" aria-labelledby="order-modal-label" aria-hidden="true">
                                                        <div class="modal-dialog modal-md pt-5">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="order-modal-label">Reply to comment</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="row">
                                                                        <div class="col-md-12">
                                                                            <h6 class="text-success">Reply Comment</h6>
                                                                            <form id="reply_<%- item._id %>" action="/add-reply/<%- item._id %>/<%- blog._id %>" method="post">
                                                                                <div class="form-row">
                                                                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                                                        <input type="text" class="form-control border-radius-0" id="name" name="name" placeholder="Name:" />
                                                                                    </div>
                                            
                                                                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                                                        <input type="email" class="form-control border-radius-0" id="email" name="email" placeholder="Email:" />
                                                                                    </div>
                                            
                                                                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
                                                                                        <textarea class="form-control border-radius-0" id="reply" name="reply" rows="3" placeholder="Type your reply here:"></textarea>
                                                                                    </div>
                                                                                </div>
                                                                                <div>
                                                                                    <button type="submit" class="btn border-radius-0 mt-4">Submit Reply</button>
                                                                                </div>
                                                                            </form>
                                            
                                                                            <script type="text/javascript">
                                                                                document.getElementById("reply_<%- item._id %>").addEventListener("submit", function(e) {
                                                                                var confirmation = confirm('Are you sure you want to reply to this comment?');
                                                                                if (!confirmation) {
                                                                                    e.preventDefault();
                                                                                    return false;
                                                                                }
                                                                                });
                                                                            </script>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-outline-success" data-dismiss="modal">Close</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                                <% }) %> 
                                            </div>
                                        <% } else { %> 
                                            <div class="customer d-flex mt-3">No comments for this post yet</div>
                                        <% } %> 
                                </div>

                                <div class="blog_form mt-3">
                                    <strong>Leave A Comment Here</strong>
                                    <form id="commentForm">
                                        <div class="form-row">
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                <input type="hidden" class="form-control border-radius-0" id="blogId" name="blogId" value="<%- blog._id %>"/>
                                                <input type="text" class="form-control border-radius-0" id="comment_name" name="name" placeholder="Name:" />
                                            </div>

                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                <input type="email" class="form-control border-radius-0" id="comment_email" name="email" placeholder="Email:" />
                                            </div>

                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
                                                <textarea class="form-control border-radius-0" id="comment" name="comment" rows="3" placeholder="Type your comment here:"></textarea>
                                            </div>
                                            <!-- recaptcha -->
                                            <div class="g-recaptcha mt-3" data-sitekey="6Lfi-xMjAAAAAFidj8TjvuEpIBNxKv_EN3n9cVwz"></div>
                                        </div>
                                        <div>
                                            <button type="submit" value="Submit" class="btn border-radius-0 mt-4">Submit Comment</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>     
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("commentForm").addEventListener("submit", submitForm);

    function submitForm(e) {
        e.preventDefault();

        var name = document.getElementById("comment_name").value;
        var email = document.getElementById("comment_email").value;
        var comment = document.getElementById("comment").value;
        var blogId = document.getElementById("blogId").value;
        var captcha = document.getElementById("g-recaptcha-response").value;

        fetch("/add-comment", {
            method: "POST",
            body: JSON.stringify({
                name: name,
                email: email,
                comment: comment,
                blogId: blogId,
                captcha: captcha
            }),
            headers: {
                "Accept": "application/json, text/plain, */*",
                "Content-type": "application/json"
            }
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert(data.msg);
                location.reload();
            } else {
                alert(data.msg);
            }
        })
        .catch(err => console.log(err));
    }
    
</script>

<%- include("../partials/footer") %>